<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/bt_to_video_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="toVideo"
        android:visibility="visible"/>
    <lava.bluepay.com.lavaapp.view.widget.swiperefresh.SwipeLoadLayout
        android:id="@+id/swipe_container_photo_portray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:swipe_style="scale">
        <lava.bluepay.com.lavaapp.view.widget.EmptyRecyclerView
            android:id="@id/swipe_target"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <include
            android:id="@id/swipe_load_more_footer"
            layout="@layout/layout_footer"/>
    </lava.bluepay.com.lavaapp.view.widget.swiperefresh.SwipeLoadLayout>
</LinearLayout>